podTemplate(
    yaml: """
apiVersion: v1
kind: Pod
metadata:
  labels:
    app: maven-build
spec:
  serviceAccountName: jenkins
  containers:
    - name: maven
      image: maxpain62/ubuntu-24.04:jdk-21-maven-3.8.6
      command:
        - cat
      tty: true
      resources:
        limits:
          memory: "2Gi"
          cpu: "1000m"
      volumeMounts:
        - name: maven-cache
          mountPath: /root/.m2
  volumes:
    - name: maven-cache
      emptyDir: {}
"""
) {

    node(POD_LABEL) {
        stage('Checkout Source') {
            echo "Running on node: ${env.NODE_NAME}"
            git branch: 'master', url: 'https://github.com/maxpain62/hello-world.git'
            sh 'ls -l'
        }

        stage('Build with Maven') {
            container('maven') {
                sh '''
                    echo "===== Maven & Java Versions ====="
                    mvn -version
                    java -version
                    echo "===== Building Project ====="
                '''
            }
        }
        echo "âœ… Pipeline completed successfully inside K8s Pod"
    }
}